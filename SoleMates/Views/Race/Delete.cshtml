@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using SoleMates.Data.Enum
@model Race

@{
    ViewData["Title"] = localizer["delete_race"];
}


<div class="container pt-3 pb-5">
    <h1>@localizer["are_you_sure"]?</h1>
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <fieldset disabled>
            <input type="hidden" value="AddressId" id="AddressId" />
            <div class="form-group">
                <label asp-for="Title">@localizer["title"]</label>
                <input asp-for="Title" class="form-control" placeholder="@localizer["title"]">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">@localizer["description"]</label>
                <input asp-for="Description" class="form-control" placeholder="@localizer["description"]">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceCategory">@localizer["race_category"]</label>
                <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control">
                    <option selected="selected" value="">--@localizer["select"]--</option>
                </select>
                <span asp-validation-for="RaceCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street">@localizer["street"]</label>
                <input asp-for="Address.Street" class="form-control" placeholder="@localizer["street"]">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City">@localizer["city"]</label>
                <input asp-for="Address.City" class="form-control" placeholder="@localizer["city"]">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.State">@localizer["state"]</label>
                <input asp-for="Address.State" class="form-control" placeholder="@localizer["state"]">
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@localizer["iamge"]</label>
                <div class="custom-file">
                    <input readonly asp-for="Image" type="file" class="form-control custom-file-input readonly" placeholder="@localizer["image"]">
                    <label asp-for="Image" class="custom-file-label">@localizer["choose_file"]</label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </fieldset>
    </form>

    <div class="form-group">
        <form asp-controller="Race" asp-action="DeleteRace" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@localizer["confirm"]" class="btn btn-danger float-right mt-3" />
        </form>
    </div>
</div>

