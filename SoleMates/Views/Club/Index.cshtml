@model IEnumerable<Club>
@{
    ViewData["Title"] = "Clubs";
}



    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                @foreach (var club in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="@club.Image" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">@club.Title</p>
                                <p class="card-text">@club.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>

                                    </div>
                                    <small class="text-muted">@club.ClubCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>


