@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using SoleMates.Data.Enum;
@using SoleMates.ViewModels;
@model EditClubViewModel
@{
    ViewData["Title"] = localizer["edit_club"];
}

<div class="container py-3">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
        <div class="form-group">
            <label asp-for="Title">@localizer["detail_club"]</label>
            <input asp-for="Title" class="form-control" placeholder="@localizer["detail_club"]">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">@localizer["description"]</label>
            <input asp-for="Description" class="form-control" placeholder="@localizer["description"]">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClubCategory">@localizer["club_category"]</label>
            <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control">
                <option selected="selected" value="">--@localizer["select"]--</option>
            </select>
            <span asp-validation-for="ClubCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street">@localizer["street"]</label>
            <input asp-for="Address.Street" class="form-control" placeholder="@localizer["street"]">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">@localizer["city"]</label>
            <input asp-for="Address.City" class="form-control" placeholder="@localizer["city"]">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.State">@localizer["state"]</label>
            <input asp-for="Address.State" class="form-control" placeholder="@localizer["state"]">
            <span asp-validation-for="Address.State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>@localizer["image"]</label>
            <div class="custom-file">
                <input asp-for="Image" type="file" class="form-control custom-file-input" placeholder="@localizer["image"]">
                <label asp-for="Image" class="custom-file-label">@localizer["choose_file"]</label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">@localizer["submit"]</button>
    </form>
</div>